@model IEnumerable<AQUAFREELUCANA.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>LISTA DE USUARIOS DEL SISTEMA </h1>

<p>
    <a asp-action="Create">Nuevo Usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cuenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cuenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rol)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar Usuario</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles del Usuario</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar Usuario</a>
                </td>
            </tr>
        }
    </tbody>
</table>
